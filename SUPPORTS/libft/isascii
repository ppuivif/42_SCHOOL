int	ft_isascii(int c)

->return non nonzero if c is included between '\0' (0 value) and DEL (127 value), in other words entire ascii content. 
->return zero if not.
->no protection needed.

int	ft_isascii(int c)
{
	if ((c >= 0) & (c <= 127))
		return (1);
	return (0);
}

#include <stdio.h>
#include <ctype.h>
#include <stdlib.h>

int	main(int argc, char **argv)
{
	if (argc == 2)
		printf("real_function return :\t%d\n", isascii(atoi(argv[1])));
	if (argc == 3)
		printf("ft_function return :\t%d\n", ft_isascii(atoi(argv[1])));
	return (0);
}
